import math

# Función para calcular la distancia entre dos puntos
def calcular_distancia():
    # Ingresar las coordenadas de los puntos
    x1 = float(input("Ingresa la coordenada x1 del primer punto: "))
    y1 = float(input("Ingresa la coordenada y1 del primer punto: "))
    x2 = float(input("Ingresa la coordenada x2 del segundo punto: "))
    y2 = float(input("Ingresa la coordenada y2 del segundo punto: "))
    
    # Calcular la distancia usando la fórmula
    distancia = math.sqrt((x2 - x1)**2 + (y2 - y1)**2)
    
    # Mostrar el resultado
    print(f"La distancia entre los dos puntos es: {distancia} unidades.")

# Llamar a la función
calcular_distancia()
